SELECT 
    WEBAPP_DBCONF.APPENV         AS APPENV, 
    WEBAPP_DBCONF.DBTYPE         AS DBTYPE,
    WEBAPP_DBCONF.COD_HOLDING    AS COD_HOLDING,
    WEBAPP_DBCONF.COD_ABI        AS COD_ABI,
    WEBAPP_DBCONF.COD_APP        AS COD_APP,
    WEBAPP_DBCONF.CONNECTION_STR AS CONNECTION_STR,
    WEBAPP_DBCONF.CONNECTION_PREFIX AS CONNECTION_PREFIX,
    WEBAPP_DBCONF.DB_USERID      AS DB_USERID,
    WEBAPP_DBCONF.DB_PASSWORD    AS DB_PASSWORD, 
    SWA.SERVER_FISICO            AS LINKED_SRV 
FROM WEBAPP_DBCONF AS WEBAPP_DBCONF
LEFT OUTER JOIN SID_WEB_ABI AS SWA 
    ON WEBAPP_DBCONF.COD_ABI = SWA.COD_ABI
WHERE 
    (WEBAPP_DBCONF.APPENV = 'TEST' OR WEBAPP_DBCONF.APPENV = 'DEVE')
    AND (WEBAPP_DBCONF.DBTYPE = 'TBSICUREZZA' OR WEBAPP_DBCONF.DBTYPE = 'TBBASE')
    AND (WEBAPP_DBCONF.COD_HOLDING IN ('', '00CCB', '03599'))
    AND (WEBAPP_DBCONF.COD_ABI = '03599')
    AND (WEBAPP_DBCONF.COD_APP = -1 OR WEBAPP_DBCONF.COD_APP = 255);
